@model FirstMVC5App.Model.Models.APP_BOOK

@{
    ViewBag.Title = "Добавить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("come_back_partial")

<h2>Добавление новой книги</h2>

@using (Html.BeginForm("Create", "Book", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form_input row" })) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-lg-offset-2 col-lg-4">
        <div class="form-group">
            @Html.LabelFor(model => model.APP_IMG.NAME, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.APP_IMG.NAME, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите название картинки" } })
            @Html.ValidationMessageFor(model => model.APP_IMG.NAME, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.APP_IMG.IMAGE, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.APP_IMG.IMAGE, new { @class = "form-control", type = "file" })
            @Html.ValidationMessageFor(model => model.APP_IMG.IMAGE, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            @Html.LabelFor(model => model.NAME, htmlAttributes: new {@class = "control-label"})
            @Html.EditorFor(model => model.NAME, new {htmlAttributes = new {@class = "form-control", placeholder = "Введите название"}})
            @Html.ValidationMessageFor(model => model.NAME, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GANRE, htmlAttributes: new {@class = "control-label"})
            @Html.EditorFor(model => model.GANRE, new {htmlAttributes = new {@class = "form-control", placeholder = "Введите жанр"}})
            @Html.ValidationMessageFor(model => model.GANRE, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRICE, htmlAttributes: new {@class = "control-label"})
            @Html.EditorFor(model => model.PRICE, new {htmlAttributes = new {@class = "form-control", placeholder = "Введите цену книги"}})
            @Html.ValidationMessageFor(model => model.PRICE, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </div>
}

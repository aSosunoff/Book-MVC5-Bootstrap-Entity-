@using System.Web.UI.WebControls
@using FirstMVC5App.Component.Helpers
@model FirstMVC5App.Model.Models.APP_BOOK

@{
    ViewBag.Title = "Редактировать";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("come_back_partial")

<h2>@ViewBag.Title книгу "@Html.DisplayTextFor(model => model.NAME)"</h2>

@using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.DATE_REG)
    @*todo: Прочитать про скрывание полей. Сейчас поле скрыто, но отображается в разметке*@

    <div class="col-lg-offset-2 col-lg-4">
        <div class="form-group">
            @Html.LabelFor(model => model.IMG_NAME, htmlAttributes: new {@class = "control-label"})
            @Html.EditorFor(model => model.IMG_NAME, new {htmlAttributes = new {@class = "form-control", placeholder = "Введите название изображения"}})
            @Html.ValidationMessageFor(model => model.IMG_NAME, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.DisplayImage(new { src = Model.IMG_FILE_PATH, @class = "img-thumbnail img-responsive center-block", alt = "Responsive image" })
            @Html.LabelFor(model => model.IMG_FILE_PATH, htmlAttributes: new {@class = "control-label"})
            @Html.EditorFor(model => model.IMG_FILE_PATH, new {htmlAttributes = new {@class = "form-control", type = "file"}})
            @Html.ValidationMessageFor(model => model.IMG_FILE_PATH, "", new {@class = "text-danger"})
        </div>
            
    </div>
    <div class="col-lg-4 form_input">
        <div class="form-group">
            @Html.LabelFor(model => model.NAME, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите название" } })
            @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GANRE, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.GANRE, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите жанр" } })
            @Html.ValidationMessageFor(model => model.GANRE, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRICE, htmlAttributes: new {@class = "control-label"})
            @Html.EditorFor(model => model.PRICE, new {htmlAttributes = new {@class = "form-control", placeholder = "Введите цену книги"}})
            @Html.ValidationMessageFor(model => model.PRICE, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </div>
}

